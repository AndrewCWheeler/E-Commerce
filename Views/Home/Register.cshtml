@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="row my-3 justify-content-center">
    <div class="col col-sm-6 mx-3">

        <form class="form border-light box-shadow p-3" asp-action="Registering" asp-controller="Home" method="POST">
            <div class="mt-2 mb-3 text-center">
                <h1 class="text-primary">Sign-Up!</h1>
            </div>
            <div class="form-group mb-4">
                <label for="FirstName" class="col-form-label form-control-sm">First Name</label>
                <input asp-for="FirstName" class="form-control form-control-lg">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>

            <div class="form-group mb-4">
                <label for="LastName" class="col-form-label form-control-sm">Last Name</label>
                    <input asp-for="LastName" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="LastName"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Email" class="col-form-label form-control-sm">Email</label>
                    <input asp-for="Email" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-4">
                <label for="CompanyName" class="col-form-label form-control-sm">Company Name</label>
                    <input asp-for="CompanyName" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="CompanyName"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Address" class="col-form-label form-control-sm">Company Address</label>
                    <input asp-for="Address" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="Address"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Password" class="col-form-label form-control-sm">Password</label>
                    <input asp-for="Password" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Confirm" class="col-form-label form-control-sm">Confirm</label>
                    <input asp-for="Confirm" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="Confirm"></span>
            </div>

            <div class="mt-5 form-group">
                    <button class="btn btn-outline-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <div class="text-center">
            <p class="mt-5 mb-1">Already signed up?</p>
            <a href="/Login">Login</a>
        </div>
    </div>
</div>
