@{
    ViewData["Title"] = "Login";
}
@model LogUser

<div class="row my-3 justify-content-center">
    <div class="col col-sm-6">

        <form class="form border-light bg-white rounded box-shadow p-3" asp-action="Logging" asp-controller="Home" method="POST">
            <div class="mt-2 mb-4 text-center text-primary">
                <h1>Login</h1>
            </div>
            <div class="form-group mb-4">
                <label for="Email" class="col-form-label form-control-sm">Email</label>
                    <input asp-for="Email" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Password" class="col-form-label form-control-sm">Password</label>
                    <input asp-for="Password" class="form-control form-control-lg">
                    <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mt-5 form-group">
                <button class="btn btn-outline-primary btn-lg btn-block">Login</button>
            </div>
            <div class="text-center">
            <p class="mt-5 mb-1">Don't have an account?</p>
            <a href="/">Register</a>
        </div>
        </form>
    </div>
</div>
